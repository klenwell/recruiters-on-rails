<p id="notice"><%= notice %></p>

<h1>Listing Recruiters</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Company</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recruiters.each do |recruiter| %>
      <tr>
        <td><%= recruiter.first_name %></td>
        <td><%= recruiter.last_name %></td>
        <td><%= recruiter.email %></td>
        <td><%= recruiter.company %></td>
        <td><%= recruiter.phone %></td>
        <td><%= link_to 'Show', recruiter %></td>
        <td><%= link_to 'Edit', edit_recruiter_path(recruiter) %></td>
        <td><%= link_to 'Destroy', recruiter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

